<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="1"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnHospital"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/doctor"
        app:layout_constraintRight_toLeftOf="@+id/btnFireStation"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/subtitle" />

    <Button
        android:id="@+id/btnFireStation"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/fireman"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnHospital"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/subtitle" />

    <Button
        android:id="@+id/btnPolice"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/policeman"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFireStation"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnCall"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:background="@drawable/phone_logo"
        app:layout_constraintRight_toLeftOf="@+id/btnSchedule"
        app:layout_constraintLeft_toRightOf="@+id/btnMap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPolice"
        app:layout_constraintVertical_bias="0.746" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:background="@drawable/account_logo"
        app:layout_constraintRight_toLeftOf="@+id/btnMap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHospital"
        app:layout_constraintVertical_bias="0.917" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:background="@drawable/maps_logo"
        app:layout_constraintRight_toLeftOf="@+id/btnCall"
        app:layout_constraintLeft_toRightOf="@+id/btnLogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPolice"
        app:layout_constraintVertical_bias="0.746" />

    <Button
        android:id="@+id/btnSchedule"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:background="@drawable/schedule_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnCall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFireStation"
        app:layout_constraintVertical_bias="0.917" />

    <ImageView
        android:id="@+id/title"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:src="@drawable/first_action_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="17dp" />

    <ImageView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/urgent_call_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintHorizontal_bias="0.25"
        android:layout_marginEnd="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <!--<TextView-->
        <!--android:id="@+id/resultField"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="TextView"-->
        <!--tools:layout_editor_absoluteX="39dp"-->
        <!--tools:layout_editor_absoluteY="332dp" />-->

</android.support.constraint.ConstraintLayout>