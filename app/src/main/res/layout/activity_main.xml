<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="1">

    <Button
        android:id="@+id/btnHospital"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/doctor"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.352"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnFireStation"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.604" />

    <Button
        android:id="@+id/btnFireStation"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/fireman"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="42dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.352" />

    <Button
        android:id="@+id/btnPolice"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/policeman"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="167dp" />

    <Button
        android:id="@+id/btnCall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/phone_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toLeftOf="@+id/btnSchedule"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/account_logo"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toLeftOf="@+id/btnMap"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/maps_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toLeftOf="@+id/btnCall"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btnSchedule"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/schedule_logo"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/title"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:src="@drawable/first_action_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/urgent_call_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnPolice"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="-16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <!--<TextView-->
        <!--android:id="@+id/resultField"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="TextView"-->
        <!--tools:layout_editor_absoluteX="39dp"-->
        <!--tools:layout_editor_absoluteY="332dp" />-->

</android.support.constraint.ConstraintLayout>